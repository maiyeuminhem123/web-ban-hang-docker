@model IEnumerable<WebBanMayTinh.Models.Order>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <h2 class="text-center mb-4">Lịch Sử Đơn Hàng</h2>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Mã đơn</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderCode</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td>@order.TotalAmount.ToString("N0")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i> Xem Chi Tiết
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left me-2"></i> Quay lại trang chủ</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}