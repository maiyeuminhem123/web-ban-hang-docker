@model WebBanMayTinh.Models.Category

@{
    ViewData["Title"] = "Sửa danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-area="Admin" asp-controller="Category" asp-action="Edit" method="post">
    <!-- 1. Hidden field cho Id -->
    <input asp-for="Id" type="hidden" />

    <!-- 2. Trường Tên danh mục -->
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- 3. Trường Mô tả -->
    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Nút Lưu / Hủy -->
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
